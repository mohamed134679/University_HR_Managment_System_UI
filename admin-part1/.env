d="attendanceForm">                <input type="number" id="empId" placeholder="Employee ID" required>                <input type="time" id="checkIn" required>                <input type="time" id="checkOut" required>                <button class="btn-success" type="submit">Update Attendance</button>            </form>        </div>        <!-- Add Holiday Section -->        <div class="section">            <h2>üéâ Add Holiday</h2>            <form id="holidayForm">                <input type="text" id="holidayName" placeholder="Holiday Name" required>                <input type="date" id="fromDate" required>                <input type="date" id="toDate" required>                <button class="btn-success" type="submit">Add Holiday</button>            </form>        </div>        <!-- Actions Section -->        <div class="section">            <h2>‚ö° Quick Actions</h2>            <button class="btn-primary" onclick="initiateAttendance()">Initiate Today's Attendance</button>            <button class="btn-danger" onclick="removeResignedDeductions()">Remove Resigned Employee Deductions</button>        </div>        <!-- Results Display -->        <div id="results"></div>    </div>    <script src="dashboard.js"></script>
